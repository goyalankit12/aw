{
  "manifest_version": 2,

  "name": "user Tracking",
  "description": "This extension helps to track user activities",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background":{
    "persistent": false,
  "scripts":["background.js"]
},
  "permissions": [
    "activeTab",
    "https://localhost/*",
    "https://google.com/*",
    "https://aw-assignment1.herokuapp.com/*"

  ],
  "content_scripts":[{
    "matches":["https://stackoverflow.com/*","http://stackoverflow.com/*"],
   "js":["jquery.js","test.js"]
  }
  ]
}
